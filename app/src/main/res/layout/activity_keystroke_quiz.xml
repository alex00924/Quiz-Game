<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    tools:context=".KeystrokeQuizActivity"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/fm"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/success"
            android:id="@+id/massage"
            android:textSize="20sp"
            android:textColor="@color/dark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/failure"
            android:id="@+id/result"
            android:textSize="16sp"
            android:textColor="@color/dark"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/backbtn"
            android:background="@color/button_primary"
            android:textColor="@color/button_text"
            android:layout_margin="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/howtoans"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waytosolve"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/dark"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:id="@+id/okbtn"
            android:background="@color/button_primary"
            android:textColor="@color/button_text"
            android:layout_margin="20dp"/>
    </LinearLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_weight="5"
        android:id="@+id/progress"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:layout_weight="5"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/dark"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="15"
        android:textAlignment="center"
        android:text="Give the right ans:"
        android:id="@+id/howtosolve"
        android:textColor="@color/dark"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="15"
        android:textAlignment="center"
        android:id="@+id/tvquestion"
        android:textColor="@color/dark"
        android:textSize="30dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ans"
        android:hint="Ans"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:inputType="text"
        android:background="@color/editTextBg"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/done"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Done"
        android:background="@color/button_primary"
        android:textColor="@color/button_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="15"
        android:text="Type ans in given field:"
        android:id="@+id/tv2"
        android:gravity="bottom"
        android:textAlignment="center"
        android:textColor="@color/dark"
        android:textSize="25dp"/>
</LinearLayout>