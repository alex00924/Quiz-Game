<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quizgame">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <uses-feature android:name="android.hardware.sensor.stepcounter" />
    <uses-feature android:name="android.hardware.sensor.stepdetector" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TouchAndTapGame"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".WalkGamesActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Walk"
            android:screenOrientation="portrait"/>
        <activity android:name=".Touch"
            android:screenOrientation="portrait"/>
        <activity android:name=".Game4Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Game3Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Game2Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Keystroke"
            android:screenOrientation="portrait"/>
        <activity android:name=".KeystrokeQuizActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Game1Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>